	public Account(){
		super();
	}
	public name getName() {
		return name;
	}
	public void setName(name name) {
		this.name = name;
	}
	
	public int getAccountNo() {
		return accountNo;
	}
	public void setAccountNo(int accountNo) {
		this.accountNo = accountNo;
	}

	public double getIncome() {
		return income;
	}
